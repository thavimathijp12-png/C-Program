#include <stdio.h>

int main()
{
    int n;
    int status[100];
    int i = 0;
    int currentStreak = 0;
    int maxStreak = 0;
    scanf("%d", &n);
    while (i < n)
    {
        scanf("%d", &status[i]);
        i++;
    }

    i = 0;
    while (i < n) {
        if (status[i] == 0)
        {
            currentStreak++;

            if (currentStreak > maxStreak) {
                maxStreak = currentStreak;
            }
        }
        else
        {
            currentStreak = 0;
        }
        i++;
    }

    // Output
    printf("Longest Failure Streak: %d\n", maxStreak);

    return 0;
}
